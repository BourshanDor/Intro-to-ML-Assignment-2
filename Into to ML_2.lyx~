\begin_deeper
\begin_layout Standard

\lang hebrew
יהיי 
\begin_inset Formula $a\in\left(0,1\right)$
\end_inset

 ויהיו 
\begin_inset Formula $\varepsilon,\delta>0$
\end_inset

 כך ש 
\begin_inset Formula $\varepsilon+\delta=a$
\end_inset

.
 מתקיים כי לכל 
\begin_inset Formula $n\geq N\left(\varepsilon,\delta\right)$
\end_inset

 ולכל 
\begin_inset Formula $P\in R\left(\H\right)$
\end_inset

 כי : 
\begin_inset Formula 
\[
\Pr\left[e_{P}\left(\A\left(S_{n}\right)\right)\leq\varepsilon\right]\geq1-\delta
\]

\end_inset

ובאופן שקול 
\begin_inset Formula 
\[
\Pr\left[e_{P}\left(\A\left(S_{n}\right)\right)>\varepsilon\right]<\delta
\]

\end_inset

נסמן ב 
\begin_inset Formula $\H_{bad}^{\varepsilon}\left(P\right)$
\end_inset

 את קבוצת ההיפותזות המקיימות: 
\begin_inset Formula 
\[
\H_{bad}^{\varepsilon}\left(P\right)=\left\{ h\in\H\mid e_{P}\left(h\right)>\varepsilon\right\} 
\]

\end_inset

מהגדרת הקבוצה מתקיים כי 
\begin_inset Formula 
\begin{align}
\Pr\left[e_{P}\left(\A\left(S_{n}\right)\right)>\varepsilon\right] & =\Pr\left[\A\left(S_{n}\right)\in\H_{bad}^{\varepsilon}\right]<\delta\label{eq:1-1}\\
\Pr\left[e_{P}\left(\A\left(S_{n}\right)\right)\leq\varepsilon\right] & =\Pr\left[\A\left(S_{n}\right)\not\in\H_{bad}^{\varepsilon}\right]\geq1-\delta
\end{align}

\end_inset

מנוסחאת התוחלת השלמה נקבל כי 
\begin_inset Formula 
\begin{align*}
 & \E\left[e_{P}\left(\A\left(S\right)\right)\right]=\E\left[\E\left[e_{p}\left(h\right)\mid\A\left(S\right)=h\right]\right]=\\
 & \underset{\leq1}{\underbrace{\E\left[e_{p}\left(h\right)\mid\A\left(S\right)\in\H_{bad}^{\varepsilon}\right]}}\underset{\text{From }\ref{eq:1-1}\text{}<\delta}{\underbrace{\Pr\left[\A\left(s\right)\in\H_{bad}^{\varepsilon}\right]}}+\underset{\text{From }\ref{eq:1-1}\text{}\leq\varepsilon}{\underbrace{\E\left[e_{p}\left(h\right)\mid\A\left(S\right)\not\in\H_{bad}^{\varepsilon}\right]}}\underset{\leq1}{\underbrace{\Pr\left[\A\left(s\right)\not\in\H_{bad}^{\varepsilon}\right]}}\\
 & \leq\delta+\varepsilon=a
\end{align*}

\end_inset


\end_layout

