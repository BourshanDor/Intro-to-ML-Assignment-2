\begin_inset Formula 
\[
\Pr\left[e_{P}\left(h_{R}\right)>\varepsilon\right]\overset{\left(\#\right)}{=}\Pr\left[\forall i\ \ \norm\notin\left(C,R\right]\right]\overset{\text{i.i.d}}{=}\prod_{i=1}^{n}\Pr\left[\norm\notin\left(C,R\right]\right]\overset{\ref{eq:1}}{=}\left(1-\varepsilon\right)^{n}\leq e^{-\varepsilon n}\leq\delta
\]

\end_inset


\end_layout

\begin_layout Standard

\lang hebrew
