\begin_layout Subsection
Problem
\end_layout

\begin_layout Standard

\lang hebrew
יהיו 
\begin_inset Formula $X,Y$
\end_inset

 משתנים מקריים כך ש 
\begin_inset Formula $Y$
\end_inset

 מקבל ערכים ב 
\begin_inset Formula $\mathcal{Y}=\left\{ 0,1\right\} $
\end_inset

 וכן 
\begin_inset Formula $\X=\mathbb{R}$
\end_inset

 בהתאמה .
 נניח כי מתקיים 
\begin_inset Formula $X_{\mid Y=0}\sim\mathcal{N}\left(\mu,\sigma_{0}^{2}\right)$
\end_inset

 וכן 
\begin_inset Formula $X_{\mid Y=1}\sim\mathcal{N}\left(\mu,\sigma_{1}^{2}\right)$
\end_inset

 כאשר 
\begin_inset Formula $\sigma_{0}\neq\sigma_{1}$
\end_inset

.
 נניח כי 
\begin_inset Formula $\Pr\left[Y=1\right]=p_{1}$
\end_inset

.
 
\end_layout

\begin_layout Standard

\lang hebrew
נמצא את מסווג אופטימלי 
\begin_inset Formula $h:\mathbb{R}\rightarrow\left\{ 0,1\right\} $
\end_inset

 שמביא למינימום את 
\begin_inset Formula $\E\left[\ell_{0-1}\left(Y,h\left(X\right)\right)\right]$
\end_inset

 
\end_layout

\begin_layout Standard

\lang hebrew
לפי ההגדרה אם כן: 
\end_layout

\begin_layout Standard

\lang hebrew
\begin_inset Formula 
\[
\E\left[\ell_{0-1}\left(Y,h\left(X\right)\right)\right]=\sum_{x\in\X,y\in\Y}\Pr\left[X=x,Y=y\right]\ell_{0-1}\left(y,h\left(x\right)\right)
\]

\end_inset


\end_layout

\begin_layout Standard

\lang hebrew
נקבע 
\begin_inset Formula $x$
\end_inset

 
\end_layout

\begin_layout Standard

\lang hebrew
\begin_inset Formula 
\begin{align*}
 & \sum_{y\in\Y}\Pr\left[X=x,Y=y\right]\ell_{0-1}\left(y,h\left(x\right)\right)=\\
= & f_{X_{\mid Y=0}}\left(x\right)\Pr\left[Y=0\right]\ell_{0-1}\left(0,h\left(x\right)\right)+f_{X_{\mid Y=1}}\left(x\right)\Pr\left[Y=1\right]\ell_{0-1}\left(1,h\left(x\right)\right)\\
= & f_{X_{\mid Y=0}}\left(x\right)\cdot\left(1-p_{1}\right)\cdot\ell_{0-1}\left(0,h\left(x\right)\right)+f_{X_{\mid Y=1}}\left(x\right)\cdot p_{1}\cdot\ell_{0-1}\left(1,h\left(x\right)\right)
\end{align*}

\end_inset


\end_layout

\begin_layout Standard

\lang hebrew
כעת התנאי 
\begin_inset Formula 
\[
h\left(x\right)=\begin{cases}
0 & \frac{f_{X_{\mid Y=0}}\left(x\right)}{f_{X_{\mid Y=1}}\left(x\right)}>\frac{p_{1}}{\left(1-p_{1}\right)}\\
1 & otherwise
\end{cases}
\]

\end_inset


\end_layout

\begin_layout Standard

\lang hebrew
נפרש את הביטוי : נשים לב מהיות 
\begin_inset Formula $f_{X_{\mid Y=y}}$
\end_inset

 פונקצית צפיפות של משתנה גאוסייני היא חיובית )ולכן נוכל לחלק בה( וההסתברות
 
\begin_inset Formula $p_{1}\in\left(0,1\right)$
\end_inset

, אחרת לא יכול להיות כי 
\begin_inset Formula $X_{\mid Y=y}$
\end_inset

 משתנה גאוסייני.
 
\begin_inset Formula 
\begin{align*}
f_{X_{\mid Y=0}}\left(x\right)\cdot\left(1-p_{1}\right)>f_{X_{\mid Y=1}}\left(x\right)\cdot p_{1} & \text{\ensuremath{\iff}}\frac{f_{X_{\mid Y=0}}\left(x\right)}{f_{X_{\mid Y=1}}\left(x\right)}>\frac{p_{1}}{\left(1-p_{1}\right)}\\
 & \text{\ensuremath{\iff}}\frac{\frac{1}{\sigma_{0}\sqrt{2\pi}}\exp\left(-\frac{\left(x-\mu\right)^{2}}{2\sigma_{0}^{2}}\right)}{\frac{1}{\sigma_{1}\sqrt{2\pi}}\exp\left(-\frac{\left(x-\mu\right)^{2}}{2\sigma_{1}^{2}}\right)}>\frac{p_{1}}{\left(1-p_{1}\right)}\\
 & \text{\ensuremath{\iff}}\frac{\sigma_{1}}{\sigma_{0}}\exp\left(\frac{\left(x-\mu\right)^{2}}{2\sigma_{1}^{2}}-\frac{\left(x-\mu\right)^{2}}{2\sigma_{0}^{2}}\right)>\frac{p_{1}}{\left(1-p_{1}\right)}\\
 & \iff\left(\frac{\left(x-\mu\right)^{2}}{2\sigma_{1}^{2}}-\frac{\left(x-\mu\right)^{2}}{2\sigma_{0}^{2}}\right)>\ln\left(\frac{p_{1}}{\left(1-p_{1}\right)}\cdot\frac{\sigma_{0}}{\sigma_{1}}\right)\\
 & \iff\left(\frac{x^{2}-2x\mu+\mu^{2}}{2\sigma_{1}^{2}}-\frac{x^{2}-2x\mu+\mu^{2}}{2\sigma_{0}^{2}}\right)>\ln\left(\frac{p_{1}}{\left(1-p_{1}\right)}\cdot\frac{\sigma_{0}}{\sigma_{1}}\right)\\
 & \iff\left(\frac{x^{2}-2x\mu+\mu^{2}}{2\sigma_{1}^{2}}-\frac{x^{2}-2x\mu+\mu^{2}}{2\sigma_{0}^{2}}\right)>\ln\left(\frac{p_{1}}{\left(1-p_{1}\right)}\cdot\frac{\sigma_{0}}{\sigma_{1}}\right)\\
 & \iff\left(\frac{\sigma_{0}^{2}x^{2}-\sigma_{0}^{2}2x\mu+\sigma_{0}^{2}\mu^{2}-\sigma_{1}^{2}x^{2}+\sigma_{1}^{2}2x-\sigma_{1}^{2}\mu^{2}}{\sigma_{1}^{2}\sigma_{0}^{2}}\right)>2\ln\left(\frac{p_{1}}{\left(1-p_{1}\right)}\cdot\frac{\sigma_{0}}{\sigma_{1}}\right)\\
 & \iff\left(\frac{x^{2}\left(\sigma_{0}^{2}-\sigma_{1}^{2}\right)+2x\mu\left(\sigma_{1}^{2}-\sigma_{0}^{2}\right)+\mu^{2}\left(\sigma_{0}^{2}-\sigma_{1}^{2}\right)}{\sigma_{1}^{2}\sigma_{0}^{2}}\right)>2\ln\left(\frac{p_{1}}{\left(1-p_{1}\right)}\cdot\frac{\sigma_{0}}{\sigma_{1}}\right)\\
 & \iff x^{2}\left(\sigma_{0}^{2}-\sigma_{1}^{2}\right)+2x\mu\left(\sigma_{1}^{2}-\sigma_{0}^{2}\right)+\mu^{2}\left(\sigma_{0}^{2}-\sigma_{1}^{2}\right)>\sigma_{1}^{2}\sigma_{0}^{2}2\ln\left(\frac{p_{1}}{\left(1-p_{1}\right)}\cdot\frac{\sigma_{0}}{\sigma_{1}}\right)
\end{align*}

\end_inset

נסמן 
\begin_inset Formula $\sigma_{1}^{2}\sigma_{0}^{2}2\ln\left(\frac{p_{1}}{\left(1-p_{1}\right)}\cdot\frac{\sigma_{0}}{\sigma_{1}}\right)=C$
\end_inset

 וכן 
\begin_inset Formula $\left(\sigma_{0}^{2}-\sigma_{1}^{2}\right)=A$
\end_inset

 :
\end_layout

\begin_layout Standard

\lang hebrew
נפריד כעת לשני מקרים )כיוון ש 
\begin_inset Formula $A\neq0$
\end_inset

 לפי הנתון( : 
\end_layout

\begin_layout Itemize

\lang hebrew
\begin_inset Formula $A>0$
\end_inset

:
\end_layout

\begin_deeper
\begin_layout Standard

\lang hebrew
\begin_inset Formula 
\begin{align*}
 & \iff x^{2}A-A2x\mu+\mu^{2}A>C\\
 & \iff x^{2}-2\mu x+\mu^{2}>\frac{C}{A}\\
 & \iff\left(x-\mu\right)^{2}>\frac{C}{A}
\end{align*}

\end_inset

אם 
\begin_inset Formula $C<0$
\end_inset

 : מתקיים לכל 
\begin_inset Formula $x$
\end_inset

 
\end_layout

\begin_layout Standard

\lang hebrew
אם 
\begin_inset Formula $C\geq0$
\end_inset

 : 
\begin_inset Formula 
\[
\iff\left(x-\mu\right)^{2}>\frac{C}{A}\iff\left|x-\mu\right|>\sqrt{\frac{C}{A}}\iff x>\mu+\sqrt{\frac{C}{A}}\text{\ or}\ x<-\mu+\sqrt{\frac{C}{A}}
\]

\end_inset


\end_layout

\end_deeper
\begin_layout Itemize

\lang hebrew
\begin_inset Formula $A<0$
\end_inset

 
\end_layout

\begin_deeper
\begin_layout Standard

\lang hebrew
\begin_inset Formula 
\begin{align*}
 & \iff x^{2}A-A2x\mu+\mu^{2}A>C\\
 & \iff x^{2}-2\mu x+\mu^{2}<\frac{C}{A}\\
 & \iff\left(x-\mu\right)^{2}<\frac{C}{A}
\end{align*}

\end_inset

אם 
\begin_inset Formula $C\leq0$
\end_inset

 : : 
\begin_inset Formula 
\[
\iff\left(x-\mu\right)^{2}<\frac{C}{A}\iff\left|x-\mu\right|<\sqrt{\frac{C}{A}}\iff-\mu+\sqrt{\frac{C}{A}}<x<\mu+\sqrt{\frac{C}{A}}
\]

\end_inset

 
\end_layout

\begin_layout Standard

\lang hebrew
אם 
\begin_inset Formula $C>0$
\end_inset

 : אין 
\begin_inset Formula $x$
\end_inset

 המקיים את הנ
\begin_inset Quotes erd
\end_inset

ל .
 
\end_layout

\end_deeper
\begin_layout Standard

\lang hebrew
נסכם 
\begin_inset Formula 
\begin{align*}
h\left(x\right) & =\begin{cases}
0 & A>0,C<0\\
0 & A>0,C\geq0,\left(x>\mu+\sqrt{\frac{C}{A}}\right)\bigvee\left(x<-\mu+\sqrt{\frac{C}{A}}\right)\\
0 & A<0,C\leq0,-\mu+\sqrt{\frac{C}{A}}<x<\mu+\sqrt{\frac{C}{A}}\\
1 & \text{otherwise}
\end{cases}\\
 & C=\sigma_{1}^{2}\sigma_{0}^{2}2\ln\left(\frac{p_{1}}{\left(1-p_{1}\right)}\cdot\frac{\sigma_{0}}{\sigma_{1}}\right)\\
 & A=\left(\sigma_{0}^{2}-\sigma_{1}^{2}\right)
\end{align*}

\end_inset


\end_layout

