\[
\E\left[Y\right]=\E\left[\max\left(X_{1},\ldots,X_{n}\right)\right]=\frac{n}{n+1}\underset{n\rightarrow\infty}{\longrightarrow}1
\]

\end_inset


\begin_inset Formula 
\[
\Var\left(Y\right)=\frac{n}{n+2}-\left(\frac{n}{n+1}\right)^{2}\underset{n\rightarrow\infty}{\longrightarrow}1-1=0
\]

\end_inset


\end_layout

