\begin_inset Formula $\E\left[Y\right]$
\end_inset

 
\begin_inset Formula 
\[
\E\left[Y\right]=\int\limits _{-\infty}^{\infty}y\cdot f_{Y}\left(y\right)\mathrm{d}y=\int\limits _{-\infty}^{0}y\cdot f_{Y}\left(y\right)\mathrm{d}y+\int\limits _{0}^{1}y\cdot f_{Y}\left(y\right)\mathrm{d}y+\int\limits _{1}^{\infty}y\cdot f_{Y}\left(y\right)\mathrm{d}y
\]

\end_inset


\end_layout

\begin_deeper
\begin_layout Standard

\lang hebrew
מתקיים כי 
\begin_inset Formula 
\[
\int\limits _{-\infty}^{0}y\cdot0\mathrm{d}y=\int\limits _{1}^{\infty}y\cdot0=0
\]

\end_inset

 ולכן 
\begin_inset Formula 
\[
\E\left[Y\right]=\int\limits _{0}^{1}y\cdot f_{Y}\left(y\right)\mathrm{d}y=\int\limits _{0}^{1}y\cdot ny^{n-1}\mathrm{d}y=\int\limits _{0}^{1}ny^{n}\mathrm{d}y=\frac{n\cdot y^{n+1}}{n+1}\biggr\rvert_{0}^{1}=\frac{n}{n+1}
\]

\end_inset


\begin_inset Formula 
\[
\boxed{\E\left[Y\right]=\frac{n}{n+1}}
\]

\end_inset


\end_layout

\end_deeper
