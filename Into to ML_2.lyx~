\begin_deeper
\begin_layout Standard

\lang hebrew
כידוע מתקיים כי 
\begin_inset Formula 
\[
\Var\left(Y\right)=\E\left[Y^{2}\right]-\E^{2}\left[Y\right]
\]

\end_inset

אם כך נמצא 
\begin_inset Formula $\E\left[Y^{2}\right]$
\end_inset

 כאשר ההסברים עבור המעברים דומים מאוד לעיל ולכן נקצר
\begin_inset Formula 
\[
\E\left[Y^{2}\right]=\int\limits _{0}^{1}y^{2}\cdot f_{Y}\left(y\right)\mathrm{d}y=\int\limits _{0}^{1}y^{2}\cdot ny^{n-1}\mathrm{d}y=\int\limits _{0}^{1}ny^{n+1}\mathrm{d}y=\frac{n\cdot y^{n+2}}{n+2}\biggr\rvert_{0}^{1}=\frac{n}{n+2}
\]

\end_inset

מתקיים אם כך 
\begin_inset Formula 
\[
\Var\left(Y\right)=\E\left[Y^{2}\right]-\E^{2}\left[Y\right]=\frac{n}{n+2}-\left(\frac{n}{n+1}\right)^{2}
\]

\end_inset


\begin_inset Formula 
\[
\boxed{\Var\left(Y\right)=\frac{n}{n+2}-\left(\frac{n}{n+1}\right)^{2}}
\]

\end_inset


\end_layout

\end_deeper
\begin_layout Itemize

\lang hebrew
אסימפטוטיקה 
